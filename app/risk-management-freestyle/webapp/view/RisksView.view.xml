<mvc:View
	controllerName="riskmanagementfreestyle.controller.RisksView"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
		items="{ path: '/ListOfRisks', sorter: { path: 'title' } }">
		<headerToolbar>
			<OverflowToolbar id="OverflowToolbarID">
				<content>
					<Title text="Risks" level="H2"/>
					<ToolbarSpacer />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="List of Risks"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column width="12em">
				<Text text="Title" />
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Owner" />
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier title="{title}"/>
					<Text text="{owner}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>